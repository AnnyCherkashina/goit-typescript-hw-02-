{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false, // <--- Змінено на false
        "skipLibCheck": true,
        "esModuleInterop": true, // <--- МАЄ БУТИ TRUE
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "bundler", // <--- МАЄ БУТИ "bundler"
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src", // Включаємо всю папку src
        "vite-env.d.ts", // Обов'язковий файл Vite
        "src/**/*.d.ts" // Для файлів декларацій, таких як custom.d.ts
    ]
    // <--- ВАЖЛИВО: СЕКЦІЯ "references" МАЄ БУТИ ПОВНІСТЮ ВИДАЛЕНА ЗВІДСИ!
}